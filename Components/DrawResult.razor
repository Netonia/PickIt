@if (!string.IsNullOrEmpty(Result))
{
    <div class="card mt-4 border-success draw-result-card">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-trophy"></i> Résultat du tirage
            </h5>
        </div>
        <div class="card-body text-center">
            <div class="result-animation">
                <h2 class="display-4 text-success fw-bold mb-3">@Result</h2>
                <p class="text-muted">
                    <i class="bi bi-clock"></i> 
                    Tiré le @DrawTime.ToString("dd/MM/yyyy à HH:mm:ss")
                </p>
            </div>
            <button class="btn btn-outline-secondary btn-sm" @onclick="ClearResult">
                <i class="bi bi-x-circle"></i> Effacer
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public string? Result { get; set; }
    [Parameter] public EventCallback OnClear { get; set; }

    private DateTime DrawTime { get; set; }

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(Result) && DrawTime == default)
        {
            DrawTime = DateTime.Now;
        }
        else if (string.IsNullOrEmpty(Result))
        {
            DrawTime = default;
        }
    }

    private async Task ClearResult()
    {
        await OnClear.InvokeAsync();
    }
}